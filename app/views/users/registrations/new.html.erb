<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
    <h2 class="user_setup_title">注册</h2>
    <hr />
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :label => false,placeholder: '请输入常用的邮箱地址', required: true, autofocus: true %>
        <%= f.input :password, :label => false, placeholder: '请输入密码', required: true, hint: ("最少 #{@minimum_password_length} 个字符的" if @minimum_password_length) %>
        <%= f.input :password_confirmation, placeholder: '确认密码', :label => false, required: true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "注册",class: "button" %>
      </div>
    <% end %>
    <hr />
      <div class="account">
        <%= link_to "已有账号？立即登录", new_session_path(resource_name) %><br />
      </div>
    </div>
  </div>
</div>
