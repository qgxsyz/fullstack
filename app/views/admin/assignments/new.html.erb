<!-- 面包屑 -->
<ol class="breadcrumb">
  <li><%= link_to("首页", admin_dashboard_path) %></li>
  <li><%= link_to("课程目录", admin_course_path(@section.chapter.course)) %></li>
  <li><%= link_to("小节详情", admin_chapter_section_path(@section.chapter, @section)) %></li>
  <li class="active">新增小节作业</li>
</ol>

<h2><%= @section.chapter.chapter_name %> <%= @section.section_name %> 新增小节作业</h2>
<%= simple_form_for [:admin, @section, @assignment] do |f| %>

    <%= f.input :assignment_name, label: "作业名字" %>
    <%= f.input :description, label: "作业描述"%>

    <%= f.submit "提交", data: { disable_with: "提交中..." }, class: "btn btn-primary" %>

<% end %>

<div id="gotop">
  <i class="fa fa-arrow-up" aria-hidden="true"></i>
</div>
