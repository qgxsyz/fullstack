<%= simple_form_for [:admin, @course] do |f| %>

  <div class="group">
    <%= f.input :course_name, label: "课程名称" %>
  </div>
  <%= f.input :category, label: "课程属性", collection: Course::CATEGORY.map{ |c| [render_course_category(c), c] }, checked: @course.category, placeholder: '请选择' %>

  <div class="group">
    <%= f.input :course_img, as: :file, label: "课程配图"%>
  </div>

  <%= f.input :is_locked, :label => "锁定课程"%>

  <%= f.submit "提交", data: { disable_with: "提交中..." } %>

<% end %>
