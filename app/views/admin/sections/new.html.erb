<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
     新增小节
    <small>所属章节：<%= @chapter.chapter_name %></small>
  </h1>

  <!-- 面包屑 -->
  <ol class="breadcrumb">
    <li><%= link_to("首页", admin_dashboard_path) %></li>
    <li><%= link_to("课程目录", admin_course_path(@chapter.course)) %></li>
    <li class="active">新增小节</li>
  </ol>
</section>

<!-- Main content -->
<section class="content container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">小节</h3>

        </div>
        <div class="box-body">
          <%= simple_form_for [:admin, @chapter, @section] do |f| %>

              <%= f.input :section_name, label: "小节名称" %>
              <%= f.input :is_exist_video, label: "是否有视频"%>
              <%= f.input :content, label: "本节内容"%>

            <%= f.submit "提交", data: { disable_with: "提交中..." }, class: "btn btn-primary" %>

          <% end %>
        </div>

      <!-- /.box -->
    </div>
    <!-- /.col -->
  </div>
</section>


 <div id="gotop">
   <i class="fa fa-arrow-up" aria-hidden="true"></i>
 </div>
